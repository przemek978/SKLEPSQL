@page
@model SKLEPSQL.Pages.ListModel
@{
    ViewData["Title"] = "Lista - ";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h2>Lista produktów</h2>
         <div class="row col-sm-12">
            <a asp-page="Create" asp-route-id=@Model.LastID class="btn btn-primary btn-large">Dodaj</a>
         </div>
         <br /><br />
         <table class="table table-striped">
         <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model =>Model.productList[0].id)</th>
                <th scope="col">@Html.DisplayNameFor(model =>Model.productList[0].name)</th>
                <th scope="col">@Html.DisplayNameFor(model =>Model.productList[0].price)</th>
                <th scope="col">Akcja</th>
            </tr>
         </thead>
         <tbody>
         @foreach (var p in Model.productList)
         {
         <tr>
            <th scope="row">@Html.DisplayFor(m => p.id)</th>
            <td>@Html.DisplayFor(m => p.name)</td>
            <td>@Html.DisplayFor(m => p.price)</td>
            <td>
            <a asp-page="Details" asp-route-id=@p.id>Szczegóły</a> |
            <a asp-page="Edit" asp-route-id=@p.id>Edytuj</a> |
            <a asp-page="Delete" asp-route-id=@p.id>Kasuj</a> |
            <a asp-page="AddCart" asp-route-id=@p.id>Dodaj do Koszyka</a>

            </td>
         </tr>
         }
         </tbody>
        
    </table>
</body>
</html>
